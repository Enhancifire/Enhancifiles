{
  "pyprland": {
    "plugins": [
      "scratchpads"
    ]
  },
  "scratchpads": {
    "term": {
      "command": "ghostty --class=dropterm --title=drop",
      "animation": "fromTop",
      "margin": 50,
      "unfocus": "hide"
    },
    "files": {
      "command": "ghostty --class=yazi -e yazi",
      "animation": "fromTop",
      "unfocus": "hide"
    }
  }
}
